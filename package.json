{
    "name": "primitives",
    "version": "0.0.0",
    "description": "Extend Radiux UI with custom primitives",
    "license": "MIT",
    "private": true,
    "packageManager": "yarn@3.2.4",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "preview": "ladle serve",
        "lint": "eslint packages --ext .ts,.tsx",
        "test": "vitest",
        "clean": "yarn workspaces foreach run clean",
        "build": "yarn workspaces foreach run build",
        "publish": "yarn workspaces foreach run publish",
        "version:patch": "yarn workspaces foreach --exclude primitives version patch",
        "version:minor": "yarn workspaces foreach --exclude primitives version minor",
        "version:major": "yarn workspaces foreach --exclude primitives version major",
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@ladle/react": "^2.4.3",
        "@testing-library/react": "^13.4.0",
        "@testing-library/react-hooks": "^8.0.1",
        "@types/react": "^18.0.21",
        "@types/react-dom": "^18.0.6",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "eslint": "^8.24.0",
        "eslint-plugin-react": "^7.31.8",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jsdom": "^20.0.1",
        "prettier": "^2.7.1",
        "react-test-renderer": "^18.2.0",
        "tsup": "^6.2.3",
        "typescript": "^4.8.4",
        "vite-tsconfig-paths": "^3.5.1",
        "vitest": "^0.23.4"
    },
    "browserslist": "> 0.5%, last 2 versions, not dead"
}
